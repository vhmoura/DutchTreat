<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Dutch Treat: @ViewBag.Title</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome-cdn/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

        <div class="navbar-brand"><i class="fa fa-paint-brush" title="Test"></i>Dutch Treat</div>


        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menu" aria-controls="menu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div id="menu" class="collapse navbar-collapse">
            <ul class="navbar-nav">
                <li class="nav-item active"><a class="nav-link" asp-controller="App" asp-action="Index">Home</a></li>
                <li class="nav-item active"><a class="nav-link" asp-controller="App" asp-action="Contact">Contact</a></li>
                <li class="nav-item active"><a class="nav-link" asp-controller="App" asp-action="About">About</a></li>
                <li class="nav-item active"><a class="nav-link" asp-controller="App" asp-action="Shop">Shop</a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item active"><a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a></li>
                }
                else
                {
                    <li class="nav-item active"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
                }
            </ul>
        </div>

    </nav>


    <section class="container">
        <h2 class="text-center">@ViewBag.Title</h2>
        @RenderBody()
    </section>

    <footer class="container">
        <div class="text-center">Copyright 2017 Dutch Treat LLC</div>
    </footer>

<environment names="Development">
    <script src="~/lib/jQuery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/index.js"></script>
</environment>

<environment names="Staging,Production">
    <script src="//ajax.aspnetcdn.com/ajax/jquery/jquery-3.2.1.min.js"
            asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
            asp-fallback-test="window.jQUery"></script>
    <script src="~/dist/dutchtreat.min.js" asp-append-version="true"></script>
</environment>

    @RenderSection("scripts", false)
</body>
</html>